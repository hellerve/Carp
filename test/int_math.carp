(load "Test.carp")

(use-all Int Test)

(deftest test
  (assert-equal test
                1
                (min 1 2)
                "min works as expected")
  (assert-equal test
                2
                (max 1 2)
                "max works as expected")
  (assert-equal test
                1
                (abs -1)
                "abs works as expected")
  (assert-equal test
                false
                (even? 3)
                "even? works as expected")
  (assert-equal test
                true
                (odd? 3)
                "odd? works as expected")
  (assert-equal test
                1
                (bit-and 3 5)
                "bit-and works as expected")
  (assert-equal test
                5
                (bit-or 1 4)
                "bit-or works as expected")
  (assert-equal test
                4
                (bit-xor 1 5)
                "bit-xor works as expected")
  (assert-equal test
                -2
                (bit-not 1)
                "bit-not works as expected")
  (assert-equal test
                8
                (bit-shift-left 2 2)
                "bit-shift-left works as expected")
  (assert-equal test
                2
                (bit-shift-right 16 3)
                "bit-shift-right works as expected")
  (assert-equal test
                -2
                (neg 2)
                "neg works as expected")
  (assert-equal test
                2
                (neg -2)
                "neg works as expected II")
  (assert-equal test
                1
                (/ 3 2)
                "integer division truncates as expected")
  (assert-equal test
                3
                (positive-mod -7 5)
                "positive-mod works on negative inputs")
  (assert-equal test
                0
                (positive-mod 0 7)
                "positive-mod works on zero")
  (assert-equal test
                8
                (pow 2 3)
                "pow works as expected")
  (assert-equal test
                1
                (pow 5 0)
                "pow returns 1 for exponent 0")
  (assert-equal test
                0
                (pow 0 5)
                "pow returns 0 for base 0")
  (assert-equal test
                5
                (clamp 0 10 5)
                "clamp returns value when in range")
  (assert-equal test
                0
                (clamp 0 10 -3)
                "clamp returns min when below range")
  (assert-equal test
                10
                (clamp 0 10 99)
                "clamp returns max when above range")
  (assert-ref-equal test
                    (Maybe.Just 42)
                    (Int.from-string "42")
                    "from-string parses a valid integer")
  (assert-nothing test
                  &(Int.from-string "abc")
                  "from-string returns Nothing for invalid input")
  (assert-true test
               (Int.> MAX 0)
               "MAX is positive")
  (assert-true test
               (Int.< MIN 0)
               "MIN is negative")
  (assert-true test
               (Int.> MAX MIN)
               "MAX is greater than MIN")
)
